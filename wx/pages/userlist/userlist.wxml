<!--pages/userlist/userlist.wxml-->
<view>
	<view wx:for="{{users}}" class="panel-item">
		<van-card desc="{{item.pos_name}}" title="{{item.user_name}}" thumb="{{item.user_head}}">
			<view slot="footer">
				<van-button size="mini" type="info">加为好友</van-button>
				<van-button size="mini" type="danger">修改信息</van-button>
			</view>
		</van-card>
	</view>
</view>
<van-toast id="van-toast" />