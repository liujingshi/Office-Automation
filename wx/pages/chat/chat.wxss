/* pages/chat/chat.wxss */

.main {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.top {
    width: 100%;
    height: calc(100% - 50px);
    display: flex;
    flex-direction: column;
}

.foot {
    width: 100%;
    height: 50px;
    position: fixed;
    left: 0;
    bottom: 0;
}

.item {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.cont {
    width: 100%;
    display: flex;
    align-items: flex-start;
}

.cont-left {
    flex-direction: row;
}

.cont-right {
    flex-direction: row-reverse;
}

.cont-left .text {
    background: #fff;
    color: #000;
}

.cont-right .text {
    background: #5FB878;
    color: #fff;
}

.head {
    /* width: 100px;
    height: 100px;
    border-radius: 100px; */
    margin: 0 10px;
}

.text {
    width: calc(100% - 160px);
    display: flex;
    flex-wrap: wrap;
    padding: 10px;
    border-radius: 10px;
}

.all {
    width: 100%;
    height: 100vh;
}

.block {
    background: #ebebeb;
    width: 100%;
    height: 60px;
}
